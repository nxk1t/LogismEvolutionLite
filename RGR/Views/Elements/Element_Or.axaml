        xmlns:controls="using:RGR.Views.Elements">
  <Design.PreviewWith>
    <controls:Element_Or />
  </Design.PreviewWith>

  <Style Selector="controls|Element_Or">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
        <Canvas Width="50" Height="26" Background="Transparent">
          <Ellipse Name="in0" Fill="Gray" Stroke="Black" StrokeThickness="1" Height="10" Width="10" Canvas.Top="2"/>
          <Ellipse Name="in1" Fill="Gray" Stroke="Black" StrokeThickness="1" Height="10" Width="10" Canvas.Top="14"/>
          <Path Fill="LightGray" Data="m 5,1 c 7,3 20,15 0,26 h 15 c 0,0 30,-13 0,-26 Z" StrokeThickness="1" Stroke="Black" Canvas.Left="5" Canvas.Top="-1"/>
          <Ellipse Name="out0" Fill="Gray" Stroke="Black" StrokeThickness="1" Height="10" Width="10" Canvas.Top="8" Canvas.Left="38"/>
        </Canvas>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
