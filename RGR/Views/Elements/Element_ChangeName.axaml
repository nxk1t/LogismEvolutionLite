<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:locc="clr-namespace:RGR.Models"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="200"
        x:Class="RGR.Views.Elements.Element_ChangeName"
        Title="Change Name">

        <StackPanel>
		<TextBox Watermark="Название" Text="{Binding NewName, Mode=TwoWay}" AcceptsReturn="True"/>
		<Button Content="Сохранить" VerticalAlignment="Bottom"
				HorizontalContentAlignment="Center"
				Command="{Binding ButtonSave}"/>
		<Button Content="Очистить" VerticalAlignment="Bottom"
				HorizontalContentAlignment="Center"
				Command="{Binding ButtonClear}"/>
	</StackPanel>
</Window>
